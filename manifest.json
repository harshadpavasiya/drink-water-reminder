{
    "manifest_version": 3,
    "name": "Drink Water Reminder",
    "version": "1.1",
    "description": "Reminds you to drink water at a customizable interval.",
    "permissions": ["notifications", "alarms", "storage"],
    "background": {
      "service_worker": "background.js"
    },
    "icons": {
      "128": "icon.png"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "128": "icon.png"
      }
    },
    "options_page": "options.html"
  }
  